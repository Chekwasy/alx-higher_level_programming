#!/usr/bin/python3
def new_in_list(my_list, idx, element):
    j = 1
    if idx < 0:
        return my_list
    for i in my_list:
        new_list[] = new_list.append
    for i in my_list:
        if j == idx:
            new_list[j] = element
            return new_list
        else:
            
        j += 1
    return my_list
