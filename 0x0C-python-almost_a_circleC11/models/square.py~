#!/usr/bin/python3
"""square class"""


class Square(Rectangle):
    """The Class begins"""

    def __init__(self, size, x=0, y=0, id=None):
        super().__init__(size, size, x, y, id)

    def __str__(self)
    """str function"""

    return '[Square] ({:d}) {:d}/{:d} - {:d}'.format(
                    self.id, self.x, self.y, self.width
        )
